  <body>
    <div class="container">
      <div class="row">
        <div class="col">
          <h2>Login</h2>
          <form action="/login" method="post">
            <label for="emailOrAlias"> Email or Alias </label>
            <input type="text" name="emailOrAlias" class="form-control" id="emailOrAlias" />
            <br /><br />
            <label for="password"> Password </label>
            <input type="password" name="password" class="form-control" id="password" />
            <br /><br />
            <button type="submit" class="btn btn-primary" name="login">Log In</button>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
